<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PushUpsInfo"
    android:id = "@+id/pushupsinfo">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:textSize="10pt"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/directions_text"
        android:layout_marginBottom="10pt" />
    <TextView
        android:id = "@+id/directions_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info"
        app:layout_constraintBottom_toTopOf="@+id/img_push_ups_info"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10pt"
        android:layout_marginLeft="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_push_ups_info"
        android:layout_width="match_parent"
        android:layout_height="150pt"
        android:background="@drawable/infopushups"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50pt"/>

    <Button
        android:id = "@+id/btnokay"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:background="@drawable/button_main"
        android:text = "Okay!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_push_ups_info"
        android:layout_marginTop="20pt"/>
</androidx.constraintlayout.widget.ConstraintLayout>