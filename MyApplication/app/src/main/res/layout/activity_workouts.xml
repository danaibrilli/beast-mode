<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workouts">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your Workout :"
        android:textSize="10pt"
        android:textAlignment="center"
        android:textColor="#7b7b7b"
        app:layout_constraintBottom_toTopOf="@+id/btnAbs"
        android:layout_marginBottom="50pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAbs"
        android:layout_width="60pt"
        android:background="@drawable/button_main"
        android:layout_height="wrap_content"
        android:text="Abs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50pt"/>

    <Button
        android:id="@+id/btnSquats"
        android:layout_width="60pt"
        android:background="@drawable/button_main"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Squats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAbs" />

    <Button
        android:id="@+id/btnPullUps"
        android:layout_width="60pt"
        android:background="@drawable/button_main"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Pull-Ups"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSquats" />

    <Button
        android:id="@+id/btnPushUps"
        android:layout_width="60pt"
        android:background="@drawable/button_main"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Push-Ups"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPullUps" />



</androidx.constraintlayout.widget.ConstraintLayout>