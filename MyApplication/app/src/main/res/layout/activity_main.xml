<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10pt"
        android:layout_marginLeft="10pt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20pt"/>

    <ImageButton
        android:src="@drawable/settings_circle"
        android:id="@+id/btnsettings"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15pt"
        android:background="#00000000"/>

    <ImageButton
        android:src="@drawable/info_circle"
        android:id="@+id/btninfomain"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15pt"
        android:background="#00000000"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back, DummyUser!"
        android:textAlignment="center"
        android:textColor="#7b7b7b"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@+id/btnWorkout"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/btnWorkout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_main"
        android:text="Workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="40pt"/>

    <Button
        android:background="@drawable/button_main"
        android:id="@+id/btnTarget"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Target Weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWorkout" />

    <Button
        android:background="@drawable/button_main"
        android:id="@+id/btnTrack"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Track Your Progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTarget" />

    <Button
        android:background="@drawable/button_main"
        android:id="@+id/btnSpin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Spin the Wheel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTrack" />


</androidx.constraintlayout.widget.ConstraintLayout>