<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <ImageView
        android:id = "@+id/imguser"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/user_circle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25pt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20pt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, DummyUser!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35pt"
        app:layout_constraintStart_toEndOf="@+id/imguser"
        android:layout_marginLeft="10pt"
        android:textSize="10pt"/>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_main"
        android:text="Edit Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="40pt"/>

    <Button
        android:background="@drawable/button_main"
        android:id="@+id/btnReevaluate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Re-evaluate yourself"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEditProfile" />

    <Button
        android:background="@drawable/button_main"
        android:id="@+id/btnConnectSmartDevices"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Connect smart devices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReevaluate" />

    <Button
        android:background="@drawable/button_main"
        android:id="@+id/btnCoupons"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Your Coupons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConnectSmartDevices" />
    <Button
        android:background="@drawable/button_main"
        android:id="@+id/btnLogout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Close app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCoupons" />

</androidx.constraintlayout.widget.ConstraintLayout>